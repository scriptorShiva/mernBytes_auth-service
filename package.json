{
   "name": "node_setup",
   "version": "1.0.0",
   "description": "intial configuration for nodejs project",
   "main": "index.js",
   "scripts": {
      "dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
      "build":"tsc",
      "format:check": "prettier . --check",
      "format:fix": "prettier . --write",
      "lint": "eslint .",
      "lint:fix": "eslint . --fix",
      "prepare": "husky install",
      "test": "jest --watch --runInBand",
      "start": "ts-node src/index.ts",
      "typeorm-migration:generate": "typeorm-ts-node-commonjs migration:generate",
      "typeorm-migration:run": "typeorm-ts-node-commonjs migration:run",
      "typeorm-migration:create": "typeorm-ts-node-commonjs migration:create"

   },
   "lint-staged": {
      "*.{js,jsx,ts,tsx}": [
         "npm run lint:fix",
         "npm run format:fix"
      ]
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/scriptorShiva/node-initial-configuration.git"
   },
   "author": "ScriptorShiva <shivapal108941@gmail.com>",
   "license": "ISC",
   "bugs": {
      "url": "https://github.com/scriptorShiva/node-initial-configuration/issues"
   },
   "homepage": "https://github.com/scriptorShiva/node-initial-configuration#readme",
   "dependencies": {
      "bcrypt": "^5.1.1",
      "cookie-parser": "^1.4.6",
      "dotenv": "^16.3.1",
      "express": "^4.18.2",
      "express-jwt": "^8.4.1",
      "express-validator": "^7.0.1",
      "jsonwebtoken": "^9.0.2",
      "jwks-rsa": "^3.1.0",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.13",
      "rsa-pem-to-jwk": "^1.1.3",
      "typeorm": "0.3.17",
      "winston": "^3.11.0"
   },
   "devDependencies": {
      "@types/bcrypt": "^5.0.2",
      "@types/cookie-parser": "^1.4.6",
      "@types/express": "^4.17.20",
      "@types/http-errors": "^2.0.3",
      "@types/jest": "^29.5.7",
      "@types/jsonwebtoken": "^9.0.5",
      "@types/node": "^16.11.10",
      "@types/supertest": "^2.0.15",
      "@types/winston": "^2.4.4",
      "@typescript-eslint/eslint-plugin": "^6.13.1",
      "@typescript-eslint/parser": "^6.13.1",
      "cross-env": "^7.0.3",
      "eslint": "^8.52.0",
      "eslint-config-prettier": "^9.0.0",
      "eslint-plugin-prettier": "^5.0.1",
      "husky": "^8.0.3",
      "jest": "^29.7.0",
      "lint-staged": "^15.0.2",
      "mock-jwks": "^1.0.10",
      "nodemon": "^3.0.1",
      "prettier": "^3.0.3",
      "supertest": "^6.3.3",
      "ts-jest": "^29.1.1",
      "ts-node": "10.7.0",
      "typescript": "4.5.2"
   }
}
